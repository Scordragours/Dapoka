<Window x:Class="Dapoka.CommandWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dapoka"
        mc:Ignorable="d"
        Title="CommandWindow1" Height="450" Width="800" Background="#B1D5EA">
    <DataGrid ItemsSource="{Binding Commande}" Name="CommandeGrid" Background="#B1D5EA">
        <DataGrid.Resources>
            <ContextMenu x:Key="CommandeGridContextMenu" >
                <ContextMenu.Items>
                    <MenuItem Header="refound" />
                </ContextMenu.Items>
            </ContextMenu>
        </DataGrid.Resources>
        <DataGrid.RowStyle>
            <Style TargetType="DataGridRow">
                <Setter Property="ContextMenu" Value="{StaticResource CommandeGridContextMenu}"/>
                <EventSetter Event="MouseDoubleClick" Handler="CommandeGrid_MouseDoubleClick"/>
            </Style>
        </DataGrid.RowStyle>
    </DataGrid>
</Window>
