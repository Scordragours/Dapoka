<Window x:Class="Dapoka.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dapoka"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Background="#B1D5EA">
            <TextBlock Text="Login"></TextBlock>
            <TextBox Name="LoginBox"></TextBox>

            <TextBlock Text="Password"></TextBlock>
            <PasswordBox Name="PasswordBox"></PasswordBox>

            <Button Content="Login" Click="Login_Click"/>
        </StackPanel>

    </Grid>
</Window>
